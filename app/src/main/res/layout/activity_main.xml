<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tgButtonOnFoot"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:checked="false"
        android:text="On foot"
        android:textOn="On foot : ON"
        android:textOff="On foot : OFF"
        android:onClick="clickOnFoot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tgButtonCar"
        android:textOn="Car : ON"
        android:textOff="Car : OFF"
        android:onClick="clickCar"
        android:checked="false"
        android:layout_below="@+id/tgButtonOnFoot"
        android:layout_alignRight="@+id/tgButtonOnFoot"
        android:layout_alignEnd="@+id/tgButtonOnFoot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/button_start"
        android:onClick="clickStart"
        android:layout_below="@+id/tgButtonCar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/button_stop"
        android:layout_below="@+id/button_start"
        android:layout_alignRight="@+id/button_start"
        android:layout_alignEnd="@+id/button_start"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickStop"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:id="@+id/button_exit"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_stop"
        android:layout_alignEnd="@+id/button_stop"
        android:onClick="clickExit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_result"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_stop"
        android:layout_alignEnd="@+id/button_stop"
        android:scrollbars="vertical"
        android:layout_below="@+id/button_stop"
        android:layout_above="@+id/button_route" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show database"
        android:id="@+id/button_showDB"
        android:layout_above="@+id/button_exit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_exit"
        android:layout_alignEnd="@+id/button_exit"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show route"
        android:id="@+id/button_route"
        android:layout_above="@+id/button_showDB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="showRoute"/>


</RelativeLayout>
